@model Bloggy.Web.Areas.Admin.Models.ChangePasswordDto
@inject IStringLocalizer<SharedResources> _localizer

<form action="/Admin/UserProfile/ChangePassword" method="post">

    <div class="form-floating">
        <input asp-for="CurrentPassword" class="form-control" placeholder="username">
        <label asp-for="CurrentPassword" class="form-label"></label>
        <span asp-validation-for="CurrentPassword" class="text-danger mt-1 d-inline-block"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Password" class="form-control" placeholder="">
        <label asp-for="Password" class="form-label"></label>
        <span asp-validation-for="Password" class="text-danger mt-1 d-inline-block"></span>
    </div>

    <div class="form-floating">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger mt-1 d-inline-block"></span>
    </div>

    <button type="submit" class="btn btn-primary">@_localizer["submit"]</button>
</form>
