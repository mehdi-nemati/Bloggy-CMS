@model Bloggy.Service.PostCategoryService.PostCategoryInsertDto
@inject IStringLocalizer<SharedResources> _localizer

<form action="/Admin/PostCategory/submit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-floating">
        <input asp-for="Title" class="form-control" placeholder="username">
        <label asp-for="Title" class="form-label"></label>
        <span asp-validation-for="Title" class="text-danger mt-1 d-inline-block"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Description" class="form-control" placeholder="">
        <label asp-for="Description" class="form-label"></label>
        <span asp-validation-for="Description" class="text-danger mt-1 d-inline-block"></span>
    </div>

    <button type="submit" class="btn btn-primary">@_localizer["submit"]</button>
</form>
