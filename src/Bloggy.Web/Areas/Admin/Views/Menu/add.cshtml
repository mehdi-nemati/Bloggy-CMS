@model Bloggy.Service.MenuService.MenuDto
@inject IStringLocalizer<SharedResources> _localizer

<form action="/Admin/Menu/submit" method="post">
    <div class="form-floating">

        <input type="hidden" asp-for="Id" />

        <div class="form-floating">
            <input asp-for="Title" class="form-control" placeholder="username">
            <label asp-for="Title" class="form-label"></label>
            <span asp-validation-for="Title" class="text-danger mt-1 d-inline-block"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Url" class="form-control" placeholder="username">
            <label asp-for="Url" class="form-label"></label>
            <span asp-validation-for="Url" class="text-danger mt-1 d-inline-block"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Order" class="form-control" placeholder="username">
            <label asp-for="Order" class="form-label"></label>
            <span asp-validation-for="Order" class="text-danger mt-1 d-inline-block"></span>
        </div>

        <div class="form-group">
            <label asp-for="ParentId" class="control-label mb-1"></label>
            <select class="form-control custom-select " asp-for="ParentId" asp-items="Model.ParentCategory">
                <option value="">@_localizer["select-item"]</option>
            </select>
        </div>

    </div>

    <button type="submit" class="btn btn-primary mt-4">@_localizer["submit"]</button>
</form>
